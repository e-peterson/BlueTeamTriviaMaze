<Window x:Class="BlueTeamTriviaMaze.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About" Height="300" Width="300" Icon="Resources/TriviaMazeIcon.png" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Resources/QuestionWindowBackground.png"/>
        </Grid.Background>
        <Label Content="About" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="272" Foreground="#FFBF0C0C" FontFamily="/BlueTeamTriviaMaze;component/Resources/#Triforce" FontSize="48" HorizontalContentAlignment="Center" OpacityMask="Black">
            <Label.Effect>
                <DropShadowEffect BlurRadius="2" Color="White" Direction="0" ShadowDepth="2"/>
            </Label.Effect>
        </Label>
        <TextBlock x:Name="txblkAbout" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Margin="10,76,0,0" Height="184" Width="272" FontFamily="/BlueTeamTriviaMaze;component/Resources/#Triforce" FontSize="16" Foreground="White" TextOptions.TextFormattingMode="Display"/>

    </Grid>
</Window>
