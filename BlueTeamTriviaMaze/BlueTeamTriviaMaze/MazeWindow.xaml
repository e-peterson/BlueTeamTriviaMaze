<Window x:Class="BlueTeamTriviaMaze.MazeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Maze" Height="347" Width="600" WindowStartupLocation="CenterScreen" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" Padding="9,5,5,5" SizeToContent="WidthAndHeight" ResizeMode="CanMinimize">

    <DockPanel LastChildFill="False" Margin="10,10,10,10">

        <Canvas x:Name="cvsInformation" DockPanel.Dock="Right" Width="227" HorizontalAlignment="Center" Margin="5,0,0,0">
            <Canvas.Background>
                <ImageBrush ImageSource="Resources/SidePanelBackground.png"/>
            </Canvas.Background>
            <Label x:Name="lblTime" Content="Time:  0:00" HorizontalAlignment="Center" Foreground="White" FontWeight="Bold" FontFamily="/BlueTeamTriviaMaze;component/Resources/#Triforce" FontSize="30" Width="227" HorizontalContentAlignment="Center" Margin="5,15,5,5"/>
            <Label x:Name="lblAvgAnsTime" Content="Average Answer Time" Canvas.Left="5" Canvas.Top="88" FontFamily="/BlueTeamTriviaMaze;component/Resources/#Triforce" FontSize="16" Foreground="White"/>
            <Label x:Name="lblAvgAnsTimeValue" Content="" Canvas.Left="171" Canvas.Top="88" FontFamily="/BlueTeamTriviaMaze;component/Resources/#Triforce" FontSize="16" Foreground="White"/>
            <Label x:Name="lblQuestionsCorrect" Content="Questions Correct" Canvas.Left="5" Canvas.Top="130" FontFamily="/BlueTeamTriviaMaze;component/Resources/#Triforce" FontSize="16" Foreground="White"/>
            <Label x:Name="lblQuestionsCorrectValue" Content="" Canvas.Left="171" Canvas.Top="130" FontFamily="/BlueTeamTriviaMaze;component/Resources/#Triforce" FontSize="16" Foreground="White"/>
            <Label x:Name="lblQuestionsIncorrect" Content="Questions Incorrect" Canvas.Left="5" Canvas.Top="172" FontFamily="/BlueTeamTriviaMaze;component/Resources/#Triforce" FontSize="16" Foreground="White"/>
            <Label x:Name="lblQuestionsIncorrectValue" Content="" Canvas.Left="171" Canvas.Top="172" FontFamily="/BlueTeamTriviaMaze;component/Resources/#Triforce" FontSize="16" Foreground="White"/>
        </Canvas>

        <Canvas x:Name="cvsMaze" Width="369" HorizontalAlignment="Center"  Height="184" VerticalAlignment="Center" Margin="0,0,5,0"/>
    </DockPanel>
</Window>
