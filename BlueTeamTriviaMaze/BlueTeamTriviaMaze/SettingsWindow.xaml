<Window x:Class="BlueTeamTriviaMaze.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="300" Width="300" ResizeMode="NoResize" SizeToContent="WidthAndHeight">
    <Window.Background>
        <ImageBrush ImageSource="Resources/Settings.png"/>
    </Window.Background>
    <Grid>
        <Button x:Name="btnEnterMaze" Content="Enter Maze" HorizontalAlignment="Left" Margin="59,218,0,0" VerticalAlignment="Top" Width="178" Click="btnEnterMaze_Click" RenderTransformOrigin="1.12,0.409" Height="32"/>
        <Slider x:Name="sldWidth" Margin="98,148,11,0" VerticalAlignment="Top" Maximum="6" Minimum="4" SmallChange="1" Value="4" TickPlacement="Both" IsSnapToTickEnabled="True"/>
        <Label Content="Maze Width:" HorizontalAlignment="Left" Height="23" Margin="11,152,0,0" VerticalAlignment="Top" Width="87"/>
        <Slider x:Name="sldHeight" Margin="98,183,11,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Maximum="6" Minimum="4" SmallChange="1" Value="4" TickPlacement="Both" IsSnapToTickEnabled="True"/>
        <Label Content="Maze Height" Height="30" Margin="11,183,196,0" VerticalAlignment="Top"/>
        <Label Content="Easy                            Hard" HorizontalAlignment="Left" Height="36" Margin="98,111,0,0" VerticalAlignment="Top" Width="185" FontWeight="Bold" FontSize="14"/>

    </Grid>
</Window>
