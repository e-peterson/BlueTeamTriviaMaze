<Window x:Class="BlueTeamTriviaMaze.Rules"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rules" Height="300" Width="300" Icon="Resources/TriviaMazeIcon.png" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Resources/QuestionWindowBackground.png"/>
        </Grid.Background>
        <Label Content="Rules" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="#FFBF0C0D" FontFamily="/BlueTeamTriviaMaze;component/Resources/#Triforce" FontSize="48" Margin="10,10,0,0" Width="272" HorizontalContentAlignment="Center" OpacityMask="Black">
            <Label.Effect>
                <DropShadowEffect Color="White" Direction="0" ShadowDepth="2" BlurRadius="2"/>
            </Label.Effect>
        </Label>
        <TextBlock x:Name="txtblkRules" HorizontalAlignment="Left" Margin="10,76,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="184" Width="272" FontFamily="/BlueTeamTriviaMaze;component/Resources/#Triforce" FontSize="16" Foreground="White"/>

    </Grid>
</Window>
